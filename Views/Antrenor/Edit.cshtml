@model MyGYM.Models.Antrenor

@{ ViewData["Title"] = "Antrenör Düzenle"; }

<div class="container mt-5">
    <h2>Antrenör Bilgilerini Düzenle</h2>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" /> <div class="form-group mb-3">
                    <label asp-for="FullName" class="control-label">Ad Soyad</label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Expertise" class="control-label">Uzmanlık</label>
                    <input asp-for="Expertise" class="form-control" />
                    <span asp-validation-for="Expertise" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ImageUrl" class="control-label">Fotoğraf URL</label>
                    <input asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Güncelle" class="btn btn-warning" />
                    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>