@model MyGYM.Models.Antrenor

@{ ViewData["Title"] = "Sil"; }

<div class="container mt-5">
    <h3 class="text-danger">Bu antrenörü silmek istediğinize emin misiniz?</h3>
    <div class="card mt-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Ad Soyad</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3">Uzmanlık</dt>
                <dd class="col-sm-9">@Model.Expertise</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Evet, Sil!" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            </form>
        </div>
    </div>
</div>