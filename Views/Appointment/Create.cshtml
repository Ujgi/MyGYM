@model MyGYM.Models.Appointment

@{ ViewData["Title"] = "Ders Ekle"; }

<div class="container mt-5">
    <h2>üïí Yeni Ders Ekle </h2>
    <div class="row">
        <div class="col-md-5">
            <form asp-action="Create">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label class="form-label">Antren√∂r Se√ß</label>
                    <select asp-for="TrainerId" class="form-control" asp-items="ViewBag.TrainerId"></select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Tarih Se√ßiniz</label>
                    <input asp-for="Date" type="date" class="form-control"
                           value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Saat Se√ßiniz</label>

                    <select name="selectedHour" class="form-control">
                        @for (int i = 9; i < 22; i++) // 09:00'dan 21:00'a kadar d√∂ner
                        {
                            <option value="@i">@i:00</option>
                        }
                    </select>
                    <small class="text-muted">Mesai saatleri: 09:00 - 21:00</small>
                </div>

                <button type="submit" class="btn btn-primary">Dersi A√ß</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}