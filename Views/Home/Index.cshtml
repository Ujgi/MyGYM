<div class="hero-section text-center text-white d-flex align-items-center justify-content-center"
     style="background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('https://images.unsplash.com/photo-1534438327276-14e5300c3a48?q=80&w=1470&auto=format&fit=crop'); background-size: cover; height: 85vh; border-radius: 0 0 50px 50px;">
